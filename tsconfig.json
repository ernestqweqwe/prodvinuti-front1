{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      // позволяет работать с пакетами, который использует common js как с 
      // обычными пакетами с помощбю import 
      "esModuleInterop": true,
      // позволяет писать вместо import * as      import просто
      "allowSyntheticDefaultImports": true,

    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
  }